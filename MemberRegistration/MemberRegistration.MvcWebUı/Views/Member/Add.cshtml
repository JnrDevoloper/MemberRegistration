@model MemberRegistration.MvcWebUı.Models.MemberAddViewModel 

<!DOCTYPE html>

<html>
<head>
    <title>title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="bg-light">

    <div class="container">
        <main>
            <div class="py-5 text-center">

                <h2>Kayıt Formu</h2>
                <p class="lead">Lütfen Bilgilerinizi giriniz</p>
                <p class="lead">@Html.ValidationMessage("MemberException")</p>
            </div>

            <div class="row g-5">

                <div class="col-md-12 col-lg-12">
                    <h4 class="mb-3">Bilgileriniz</h4>
                    @using (Html.BeginForm())
                    {
                        <div class="row g-3">
                            <div class="col-sm-6">
                                <label for="firstName" class="form-label">Adınız</label>
                                <input type="text" class="form-control" id="firstName" name="member.firstName" placeholder="" value="" required>
                            </div>

                            <div class="col-sm-6">
                                <label for="lastName" class="form-label">Soyadınız</label>
                                <input type="text" class="form-control" id="lastName" name="member.lastName" placeholder="" value="" required>
                            </div>

                            <div class="col-12">
                                <label for="tcNo" class="form-label">Tc Kimlik Numaranız</label>
                                <div class="input-group has-validation">
                                    <span class="input-group-text"></span>
                                    <input type="text" class="form-control" id="tcNo" name="member.tcNo" placeholder="Tc Kimlik Numarası">
                                </div>
                            </div>

                            <div class="col-12">
                                <label for="email" class="form-label">Email</label>
                                <input type="email" class="form-control" id="email" name="member.email" placeholder="you@example.com">
                            </div>

                            <div class="col-12">
                                <label for="address" class="form-label">Doğum Tarihiniz</label>
                                <input type="text" class="form-control" id="dateOfBirth" name="member.dateOfBirth" placeholder="06/01/1995">
                            </div>

                        </div>

                        <hr class="my-4">


                        <button class="w-100 btn btn-primary btn-lg" type="submit">Kayıt ol</button>
                    }
                </div>
            </div>
        </main>

        <footer class="my-5 pt-5 text-muted text-center text-small">
            <p class="mb-1">&copy; 2017–2022 Company Name</p>
            <ul class="list-inline">
                <li class="list-inline-item"><a href="#">Privacy</a></li>
                <li class="list-inline-item"><a href="#">Terms</a></li>
                <li class="list-inline-item"><a href="#">Support</a></li>
            </ul>
        </footer>
    </div>
</body>
</html>